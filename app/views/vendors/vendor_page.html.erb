<html>
<head>
  <title><%= Vendor.find(params[:id]).name %>'s Products</title>
</head>

<body>
  <h2><%= Vendor.find(params[:id]).name %>'s Products</h2>
  <ul><% Product.where(vendor_id: params[:id]).each do |product| %>
    <li><a href = <%= product.path %> ><%= product.name %></a> &mdash; <%= number_to_currency(product.price) %></li>
    <% end %>
  </ul>

  <!-- This should appear only if user is logged in as this vendor -->
  <a href="/vendors/<%=params[:id]%>/add_product">Add a product</a>

</body>
</html>
