<!DOCTYPE html>
<html>
<head>
  <title>All about <%= @product.name %></title>
</head>

<body>
  <h1> <%= @vendor.name %>'s <%= @product.name %> </h1>
  <p> <%= @product.description %> &mdash; $<%= @product.price %></p>
  <% if session[:vendor_id] == @vendor.id %>
    <% if @sales.length > 0 %>
      <% @sales.each do |sale|%>
        Sold <%= sale.number_sold %> at <%= sale.created_at %> for <%= number_to_currency(sale.cost) %>.<br>
      <% end %>
    <% end %>
    <a class="button" href = "/sales/new/<%=params[:id]%>">Make a Sale</a>
    <a class="button" href = <%= @product.edit_path %> >Edit</a>
    <a class="button" href = <%= @product.delete_path %> >Delete</a>
  <% end %>
  <a class="button" href= "/vendors/<%= @product.vendor_id %>">Back to <%= @vendor.name %></a>
</body>
</html>
